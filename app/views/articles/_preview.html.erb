  <div class="content-container light-primary-color secondary-text-color">
    <ul>
      <li class="preview primary-text-color">
        <%= link_to article.title, article %>
      </li>
      <li class="preview secondary-text-color">
        | <%= article.comments.public_count %> Comments
      </li>
    </ul>
    
    <% if article.body.length > 25 %>
      <%= article.body.first(22) %>...
    <% else %>
      <%= article.body %>
    <% end %>
  </div>